<Window x:Class="Gra2WPF.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gra2WPF"
        mc:Ignorable="d"
        Title="Settings" Height="144.361" Width="300">
    <Grid>
        <Slider x:Name="sliderDifficulty" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="144" Margin="138,10,0,0" SmallChange="1" Value="3" Minimum="1" ValueChanged="sliderDifficulty_ValueChanged" Maximum="5"/>
        <Button x:Name="btnConfirm" Content="Confirm" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="207,83,0,0" Click="btnConfirm_Click"/>
        <Label x:Name="lblDificulty" Content="Difficulty level: 3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,7,0,0"/>
    </Grid>
</Window>
